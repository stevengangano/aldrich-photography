<% include partials/header %>

<link rel="stylesheet" href="../stylesheets/bootstrap.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<h3 class="text-center"> Add a new photo </h3>

<br> 

<div class="container">
	<div class="row">
		<div style="width: 30%; margin:0 auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control img-responsive" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control img-responsive" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control img-responsive" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-small btn-block"> Submit </button>
				</div>
				<a href="/campgrounds"> Photos </a>
			</form>
		</div>
	</div>
</div>

