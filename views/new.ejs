<% include partials/header %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">

<h3 class="text-center"> Add a new photo </h3>

<br> 

<div class="container">
	<div class="row">
		<div style="width: 30%; margin:0 auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control img-responsive" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control img-responsive" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<input class="form-control img-responsive" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-small btn-block"> Submit </button>
				</div>
				<a href="/campgrounds"> Back </a>
			</form>
		</div>
	</div>
</div>

