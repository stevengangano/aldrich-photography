					<input class="form-control" type="text" name="name" placeholder="name" value="<%= mycampground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url" value="<%= mycampground.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description" value="<%= mycampground.desc %>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-small btn-block"> Submit </button>
				</div>

			</form>
		</div>
	</div>
</div>

